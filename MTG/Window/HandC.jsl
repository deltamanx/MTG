package MTG;

import java.awt.TextArea;
/**
 * Summary description for Hand.
 */
public class HandC extends TextArea
{
	String text = "";

	public HandC()
	{
		super("", 10, 20);
		setVisible(true);
		drawText();
	}

	public void drawText()
	{
		try
		{
			setText("");
			text = "";
			for (int i = 0; i < 7; i++)
				text = MTG.h.cards[i].getName() + ";\n" + text;
			setText(text);
		}
		catch (NullPointerException e)
		{
			drawText();
		}
	}
}
